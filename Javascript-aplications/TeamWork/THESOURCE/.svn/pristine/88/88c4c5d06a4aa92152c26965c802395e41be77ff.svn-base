    muteAutio: function(){
        var button = $("<button />").text('Audio');

        button.on('click', function (ev) {
            ev.preventDefault();
            var audio = document.getElementById('audio-bc');
            if (audio.muted == true) {
                audio.muted = false;
            }
            else {
                audio.muted = true;
            }
            
        });

        return button;
    },
