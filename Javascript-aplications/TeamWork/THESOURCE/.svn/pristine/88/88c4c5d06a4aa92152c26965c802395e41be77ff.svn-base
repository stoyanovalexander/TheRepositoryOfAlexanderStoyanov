        button.on("click", function(ev) {
            ev.preventDefault();
            _self.renameHotel(input.val());
        });
        form.append(input).append(button);
        itemForm.append(form);
        return itemForm;
    },
    addCatForm: function() {
        var _self = this;
        var form = $("<form />");
        var itemForm = $("<div></div>");
        var input = $("<input />");
        var button = $("<button />").text('Add');
        button.on("click", function(ev) {
            ev.preventDefault();
            if (input.val().length > 0)
            {
                _self.addCat(input.val());
            }
        });
        form.append(input).append(button);
        itemForm.append(form);
        return itemForm;
