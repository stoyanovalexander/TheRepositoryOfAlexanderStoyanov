html, body, ul, p {
	margin: 0;
	padding: 0;
}

h2 {
	margin: 0;
}

#hotel {
	zoom: 1;
}

#hotel:after {
	content: '';
	display: block;
	clear: both;
}

.room {
	width: 100px;
	height: 100px;
	background: #ccc;
	border: 1px solid #666;
	float: left;
	margin: 10px;
}

.room img {
	width: 90%;
}

