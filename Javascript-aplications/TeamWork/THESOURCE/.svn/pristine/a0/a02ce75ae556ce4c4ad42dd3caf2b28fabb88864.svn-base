	background: #004962;
	height: 40px;
	color: #fff;
	padding-left: 20px;
}

#hotel-menu ul:after {
	content: '';
	clear: both;
	display: block;
}

#hotel-menu > ul > li {
	float: left;
	position: relative;
	padding-left: 20px;
	padding-right: 20px;
	text-transform: uppercase;
	line-height: 40px;
}

#hotel-menu button {
	width: 20px;
	height: 20px;
}